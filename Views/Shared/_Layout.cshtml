<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CS:GO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CS:GO</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                        <li><a class="nav-link text-dark" asp-controller="Platform" asp-action="Index">Платформы</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a class="nav-link text-dark" asp-controller="Map" asp-action="Index">Карты</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a class="nav-link text-dark" asp-controller="Player" asp-action="Index">Игроки</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a class="nav-link text-dark" asp-controller="Role" asp-action="Index">Роли в команде</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a class="nav-link text-dark" asp-controller="Team" asp-action="Index">Команды</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a class="nav-link text-dark" asp-controller="Weapon" asp-action="Index">Оружие</a></li>
                        </li>



                    </ul>
                    <ul>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="dropdown nav-item">
                                <a id="drop1" href="#" class="dropdown-toggle nav-link text-dark" data-toggle="dropdown">
                                    Админ
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Пользователи</a></li>
                                    <li><a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Роли</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Details">@User.Identity.Name</a>
                            </li>

                            <li class="nav-item">
                                <form class="form-inline" method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Регистрация</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a>&copy; 2022 - CS - Тех. поддержка: +79903213783</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>


